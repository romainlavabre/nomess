<?xml version="1.0" encoding="utf-8"?>
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="https://schema.phpunit.de/9.3/phpunit.xsd" backupGlobals="false" colors="true"
         convertErrorsToExceptions="true" convertNoticesToExceptions="true" convertWarningsToExceptions="true"
         processIsolation="false" stopOnError="false" stopOnFailure="false" stopOnIncomplete="false"
         stopOnSkipped="false" stopOnRisky="false" verbose="true">
    <coverage processUncoveredFiles="true">
        <include>
            <directory suffix=".php">../src/Modules</directory>
        </include>
    </coverage>
</phpunit>
